@inject Web.User.Helpers.ViewHelper viewHelper
@{
    if (viewHelper.IsLoggedIn(User))
    {
        if(viewHelper.GetUserRole(User) == Common.Settings.RoleTypes.Administrator)
        {
            Layout = "_AdminLayout";
        }
        else if (viewHelper.GetUserRole(User) == Common.Settings.RoleTypes.Partner)
        {
            Layout = "_PartnerLayout";
        }
        else if (viewHelper.GetUserRole(User) == Common.Settings.RoleTypes.PartnerUser)
        {
            Layout = "_PartnerUserLayout";
        }
        else
        {
            Layout = "_Layout";
        }
    }
    else
    {
        Layout = "_Layout";
    }
}
