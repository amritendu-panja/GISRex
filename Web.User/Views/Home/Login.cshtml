@model LoginModel
@{
}


<div>
    @using(Html.BeginForm(FormMethod.Post, new {@id="frmLogin"}))
    {
        @Html.AntiForgeryToken()
        <div>
            @Html.LabelFor(m=> m.Username, new { @class = "form-control-label" })    
            <div>
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
            </div>
        </div>
        <div>
            @Html.LabelFor(m=> m.Password, new { @class = "form-control-label" })
            <div>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>        
        <div>
            <input type="submit" class="btn btn-primary" value="Login" />
            @Html.ActionLink("Register Me!", "register", new { @class = "link-primary"})
        </div>
    }
</div>
