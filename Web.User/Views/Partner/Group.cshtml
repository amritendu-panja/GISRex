@model ApplicationGroupModel

@{
	ViewData["Title"] = "Group";
	ViewData["ActiveLink"] = "Groups";
}
@section HeaderNavBar{
	<ul class="navbar-nav">
		<li class="nav-item">
			<a asp-controller="Partners" asp-action="Groups" class="btn btn-primary text-white">
				<i class="fa-solid fa-user-group"></i><span class="ms-2">Back to Groups</span>
			</a>
		</li>
	</ul>
}
<div class="col-12 d-flex justify-content-center">
	<div class="col-8">
		<div class="card">
			<div class="card-header">
				<span>Group Details</span>
			</div>
			<div class="card-body">
				<div class="row mb-3">
					<div class="col">
						@Html.LabelFor(m=> m.GroupName)
					</div>
					<div class="col">
						@Html.DisplayFor(m=> m.GroupName)
					</div>
				</div>
				<div class="row mb-3">
					<div class="col">
						@Html.LabelFor(m=> m.Description)
					</div>
					<div class="col">
						@Html.DisplayFor(m=> m.Description)
					</div>
				</div>
			</div>
		</div>
	</div>
</div>